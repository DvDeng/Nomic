package nomic;

import java.util.Map;

public class Game {

	int currentPlayer;
	UserList userList;
	Ruleset rules;
	boolean playing = false;	
	Map<User,Integer> score;
	Map<User,Integer> votes;

	Game(int players){		
		UserList userList = new UserList(players);
		Ruleset rules = new Ruleset();
	}

	Game(String fileName){
//		 Load a game from "fileName"
		
		
	}
	public void play(){
		while(playing){
			userList.getPlayer(currentPlayer).takeTurn(this);
			currentPlayer = (currentPlayer++)%userList.numberOfPlayers();
		}	
	}

	public void addRule(Rule rule){
		rules.add(rule);
	}

}
